{
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "compile:wotan": "tsc -p packages/wotan/tsconfig.build.json",
    "compile:ve": "tsc -p packages/ve",
    "compile:bifrost": "tsc -p packages/bifrost",
    "compile:heimdall": "tsc -p packages/heimdall",
    "compile:disir": "tsc -p packages/disir",
    "compile:scripts": "tsc -p scripts",
    "compile": "run-p compile:*",
    "lint:wotan": "cd packages/wotan && yarn lint",
    "lint:ve": "cd packages/ve && yarn lint",
    "lint:bifrost": "cd packages/bifrost && yarn lint",
    "lint:heimdall": "cd packages/heimdall && yarn lint",
    "lint:disir": "cd packages/disir && yarn lint",
    "lint:scripts": "tslint -p scripts && wotan -p scripts",
    "lint": "run-p lint:*",
    "check-dependencies": "cd packages/wotan && yarn check-dependencies",
    "check-package:wotan": "node scripts/api-guard wotan",
    "check-package:heimdall": "node scripts/api-guard heimdall",
    "check-package:bifrost": "node scripts/api-guard bifrost",
    "check-package:ve": "node scripts/api-guard ve",
    "check-package": "run-p \"check-package:* {@}\" --",
    "test:wotan": "cd packages/wotan && yarn test",
    "test:ve": "cd packages/ve && yarn test",
    "test:bifrost": "cd packages/bifrost && yarn test",
    "test:heimdall": "cd packages/heimdall && yarn test",
    "test:disir": "cd packages/disir && yarn test",
    "test": "run-p \"test:* {@}\" --",
    "report-coverage": "codecov --disable=gcov",
    "coverage": "nyc",
    "test-coverage": "nyc --reporter=html yarn test",
    "verify": "run-s compile check-dependencies check-package lint test-coverage"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@fimbul/disir": "*",
    "@fimbul/wotan": "*",
    "@types/diff": "^3.2.2",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^9.4.0",
    "chalk": "^2.3.1",
    "codecov": "^3.0.0",
    "diff": "^3.4.0",
    "mkdirp": "^0.5.1",
    "npm-packlist": "^1.1.10",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "semver": "^5.5.0",
    "tslint": "^5.9.1",
    "tslint-consistent-codestyle": "^1.11.1",
    "typescript": "^2.7.1"
  }
}
